{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false
    },
    "include": [
      "src",
      "api"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }